{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@orders/(.*)$": "<rootDir>/../src/modules/orders/$1",
    "^@root/(.*)$": "<rootDir>/../src/$1"
  }
}
